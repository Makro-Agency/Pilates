{{ 'global_competitor-comparison.css' | asset_url | stylesheet_tag }}

<div class="competitor-comparison-section">
  <div class="padding-sections">
    <h2 class="h2 heading text-center">{{ section.settings.title }}</h2>
    
    <div class="comparison-table-wrapper">
      <div class="comparison-table">
        <!-- Header Row with Competitor Names -->
        <div class="table-row header-row">
          <div class="feature-label"></div>
          {% for block in section.blocks %}
            {% if block.type == "competitor" %}
              <div class="competitor-column">
                {{ block.settings.name }}
              </div>
            {% endif %}
          {% endfor %}
        </div>
        
        <!-- Price Row -->
        <div class="table-row">
          <div class="feature-label">PRICE</div>
          {% for block in section.blocks %}
            {% if block.type == "competitor" %}
              <div class="competitor-column">
                {{ block.settings.price }}
              </div>
            {% endif %}
          {% endfor %}
        </div>
        
        <!-- Average Cost Per Class Row -->
        <div class="table-row">
          <div class="feature-label">AVERAGE COST PER CLASS</div>
          {% for block in section.blocks %}
            {% if block.type == "competitor" %}
              <div class="competitor-column">
                {{ block.settings.cost_per_class }}
              </div>
            {% endif %}
          {% endfor %}
        </div>

        <!-- Single Credit Cost Row -->
        {% comment %} {% if block.settings.single_credit_cost != blank %} {% endcomment %}
          <div class="table-row">
            <div class="feature-label">Single Credit Cost</div>
            {% for block in section.blocks %}
              {% if block.type == "competitor" %}
                <div class="competitor-column">
                  {{ block.settings.single_credit_cost }}
                </div>
              {% endif %}
            {% endfor %}
          </div>
        {% comment %} {% endif %} {% endcomment %}
        
        <!-- Access Row -->
        <div class="table-row">
          <div class="feature-label">ACCESS</div>
          {% for block in section.blocks %}
            {% if block.type == "competitor" %}
              <div class="competitor-column">
                {{ block.settings.access }}
              </div>
            {% endif %}
          {% endfor %}
        </div>
        
        <!-- Guest Credit Row -->
        <div class="table-row">
          <div class="feature-label">GUEST CREDIT</div>
          {% for block in section.blocks %}
            {% if block.type == "competitor" %}
              <div class="competitor-column">
                {{ block.settings.guest_credit }}
              </div>
            {% endif %}
          {% endfor %}
        </div>
        
        <!-- Minimum Commitment Row -->
        <div class="table-row">
          <div class="feature-label">MINIMUM COMMITMENT</div>
          {% for block in section.blocks %}
            {% if block.type == "competitor" %}
              <div class="competitor-column">
                {{ block.settings.min_commitment }}
              </div>
            {% endif %}
          {% endfor %}
        </div>
        
        <!-- Cancel Anytime Row -->
        <div class="table-row">
          <div class="feature-label">CANCEL ANYTIME</div>
          {% for block in section.blocks %}
            {% if block.type == "competitor" %}
              <div class="competitor-column">
                {% if block.settings.cancel_anytime %}
                  <span class="checkmark">
                    <svg xmlns="http://www.w3.org/2000/svg" width="25" height="24" viewBox="0 0 25 24" fill="none">
                      <path d="M4.45215 12.0304L9.79391 17.5331L20.5479 6.46729" stroke="white" stroke-width="1.5"/>
                    </svg>
                  </span>
                {% else %}
                  <span class="cross">
                    <svg xmlns="http://www.w3.org/2000/svg" width="25" height="24" viewBox="0 0 25 24" fill="none">
                      <path opacity="0.4" d="M4.6665 19.5L12.1665 12M12.1665 12L19.6665 4.5M12.1665 12L4.6665 4.5M12.1665 12L19.6665 19.5" stroke="white" stroke-width="1.5"/>
                    </svg>
                  </span>
                {% endif %}
              </div>
            {% endif %}
          {% endfor %}
        </div>
        
        <!-- Price Protected Row -->
        <div class="table-row">
          <div class="feature-label">PRICE PROTECTED</div>
          {% for block in section.blocks %}
            {% if block.type == "competitor" %}
              <div class="competitor-column">
                {% if block.settings.price_protected %}
                  <span class="checkmark">
                    <svg xmlns="http://www.w3.org/2000/svg" width="25" height="24" viewBox="0 0 25 24" fill="none">
                      <path d="M4.45215 12.0304L9.79391 17.5331L20.5479 6.46729" stroke="white" stroke-width="1.5"/>
                    </svg>
                  </span>
                {% else %}
                  <span class="cross">
                    <svg xmlns="http://www.w3.org/2000/svg" width="25" height="24" viewBox="0 0 25 24" fill="none">
                      <path opacity="0.4" d="M4.6665 19.5L12.1665 12M12.1665 12L19.6665 4.5M12.1665 12L4.6665 4.5M12.1665 12L19.6665 19.5" stroke="white" stroke-width="1.5"/>
                    </svg>
                  </span>
                {% endif %}
              </div>
            {% endif %}
          {% endfor %}
        </div>
        
      </div>
    </div>
    
    <div class="more-info">
      <div class="more-info-wrap">
        {% if section.settings.info_text != blank %}
          <p class="description">{{ section.settings.info_text }}</p>
        {% endif %}
        {% if section.settings.link_Label != blank or section.settings.link_Label_1 != blank %}
          <div class="page-links">
            {% if section.settings.link_Label != blank %}
              <span id="{{ section.settings.section_id }}">{{ section.settings.link_Label }}
                <svg xmlns="http://www.w3.org/2000/svg" width="17" height="16" viewBox="0 0 17 16" fill="none">
                  <path d="M10.5131 10.0078L14.5206 6.00023M14.5206 6.00023L10.5131 1.99268M14.5206 6.00023H1.75488" stroke="white" stroke-width="1.5"/>
                </svg>
              </span>
            {% endif %}
            {% if section.settings.link_Label_1 != blank %}
              <span id="{{ section.settings.section_id_1 }}">{{ section.settings.link_Label_1 }}
                <svg xmlns="http://www.w3.org/2000/svg" width="17" height="16" viewBox="0 0 17 16" fill="none">
                  <path d="M10.5131 10.0078L14.5206 6.00023M14.5206 6.00023L10.5131 1.99268M14.5206 6.00023H1.75488" stroke="white" stroke-width="1.5"/>
                </svg>
              </span>
            {% endif %}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Competitor Comparison",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "COMPETITOR COMPARISON"
    },
    {
      "type": "text",
      "id": "info_text",
      "label": "Info Text",
      "default": "For more information on membersips terms, delails & payments, Please visit our FAQ"
    },
    {
      "type": "text",
      "id": "link_Label",
      "label": "Link Label",
      "default": "Explore FAQ PAGE"
    },
    {
      
      "type": "text",
      "id": "section_id",
      "label": "Link Section Id",
    },
    {
      "type": "text",
      "id": "link_Label_1",
      "label": "Link Label",
      "default": "Explore all Memberships"
    },
    {
      
      "type": "text",
      "id": "section_id_1",
      "label": "Link Section Id",
    }
  ],
  "max_blocks": 10,
  "blocks": [
    {
      "type": "competitor",
      "name": "Competitor",
      "settings": [
        {
          "type": "text",
          "id": "name",
          "label": "Competitor Name",
          "default": "Competitor"
        },
        {
          "type": "text",
          "id": "price",
          "label": "Price",
          "default": "$12"
        },
        {
          "type": "text",
          "id": "cost_per_class",
          "label": "Average Cost Per Class",
          "default": "$12"
        },
        {
          "type": "text",
          "id": "single_credit_cost",
          "label": "Single Credit Cost"
        },
        {
          "type": "text",
          "id": "access",
          "label": "Access Details",
          "default": "Limited"
        },
        {
          "type": "text",
          "id": "guest_credit",
          "label": "Guest Credit",
          "default": "None"
        },
        {
          "type": "text",
          "id": "min_commitment",
          "label": "Minimum Commitment",
          "default": "Monthly"
        },
        {
          "type": "checkbox",
          "id": "cancel_anytime",
          "label": "Cancel Anytime",
          "default": false
        },
        {
          "type": "checkbox",
          "id": "price_protected",
          "label": "Price Protected",
          "default": false
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Competitor Comparison",
      "blocks": [
        {
          "type": "competitor"
        },
        {
          "type": "competitor"
        },
        {
          "type": "competitor"
        }
      ]
    }
  ]
}
{% endschema %}