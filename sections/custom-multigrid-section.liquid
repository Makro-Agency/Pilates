
{{ 'custom-multi-grid.css' | asset_url | stylesheet_tag }}

<section class="custom-workout{% if settings.animations_reveal_on_scroll %} scroll-trigger--offscreen scroll-trigger animate--fade-in{% endif %}"
  {% if settings.animations_reveal_on_scroll %}data-cascade style="--animation-order: {{ section.index }};"{% endif %}
>
  <div class="custom-workout__wrapper{% if settings.animations_reveal_on_scroll %} scroll-trigger--offscreen scroll-trigger animate--slide-in{% endif %}"
    {% if settings.animations_reveal_on_scroll %}data-cascade style="--animation-order: {{ section.index | plus: 1 }};"{% endif %}
  >
    <h2 class="custom-workout__heading">{{ section.settings.heading }}</h2>
    <p class="custom-workout__subtitle">{{ section.settings.subtitle }}</p>

    <div class="custom-workout__cards">
      {% for block in section.blocks %}
        <div class="custom-workout__card">
          <div class="card-inner">
            {% if  block.settings.card_title != blank %}<h3 class="custom-workout__card-title">{{ block.settings.card_title }}</h3>{% endif %}
            {% if  block.settings.card_text != blank %}<p class="custom-workout__card-text">{{ block.settings.card_text }}</p>{% endif %}
          </div>
          <div class="card-inner-benefits">
            <div class="custom-workout__benefits-label">
             {% if block.settings.benefits_label != blank %} {{ block.settings.benefits_label }} {% endif %}
            </div>
            <ul class="custom-workout__benefits-list">
              {% if block.settings.benefit_1 != blank %}
                <li class="{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
                  {% if settings.animations_reveal_on_scroll %}data-cascade style="--animation-order: {{ section.index | plus: 3 }};"{% endif %}
                >{{ block.settings.benefit_1 }}</li>
              {% endif %}
              {% if block.settings.benefit_2 != blank %}
                <li class="{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
                  {% if settings.animations_reveal_on_scroll %}data-cascade style="--animation-order: {{ section.index | plus: 3 }};"{% endif %}
                >{{ block.settings.benefit_2 }}</li>
              {% endif %}
              {% if block.settings.benefit_3 != blank %}
                <li class="{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
                  {% if settings.animations_reveal_on_scroll %}data-cascade style="--animation-order: {{ section.index | plus: 4 }};"{% endif %}
                >{{ block.settings.benefit_3 }}</li>
              {% endif %}
                {% if block.settings.benefit_4 != blank %}
                <li class="{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
                  {% if settings.animations_reveal_on_scroll %}data-cascade style="--animation-order: {{ section.index | plus: 5 }};"{% endif %}
                >{{ block.settings.benefit_4 }}</li>
              {% endif %}
              {% if block.settings.benefit_5 != blank %}
                <li class="{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
                  {% if settings.animations_reveal_on_scroll %}data-cascade style="--animation-order: {{ section.index | plus: 6 }};"{% endif %}
                >{{ block.settings.benefit_5 }}</li>
              {% endif %}
              {% if block.settings.benefit_6 != blank %}
                <li class="{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
                  {% if settings.animations_reveal_on_scroll %}data-cascade style="--animation-order: {{ section.index | plus: 7 }};"{% endif %}
                >{{ block.settings.benefit_6 }}</li>
              {% endif %}
                {% if block.settings.benefit_7 != blank %}
                <li class="{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
                  {% if settings.animations_reveal_on_scroll %}data-cascade style="--animation-order: {{ section.index | plus: 8 }};"{% endif %}
                >{{ block.settings.benefit_7 }}</li>
              {% endif %}
                {% if block.settings.benefit_8 != blank %}
                <li class="{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
                  {% if settings.animations_reveal_on_scroll %}data-cascade style="--animation-order: {{ section.index | plus: 9 }};"{% endif %}
                >{{ block.settings.benefit_7 }}</li>
              {% endif %}
            </ul>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>



