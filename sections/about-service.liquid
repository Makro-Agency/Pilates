<link rel="stylesheet" href="{{ 'about-service.css' | asset_url }}" media="print" onload="this.media='all'">
<noscript><link rel="stylesheet" href="{{ 'about-service.css' | asset_url }}"></noscript>

{% if section.blocks.size > 0 %}
<div class="service-main-box scroll-trigger animate--slide-in">
  {% for block in section.blocks %}
    {% if block.settings.sub_title != blank or block.settings.title != blank or block.settings.description != blank or block.settings.button_1 != blank or block.settings.button_2 != blank or block.settings.background_image != blank %}  
    <div class="service-item">
      {% if block.settings.sub_title != blank or block.settings.title != blank or block.settings.description != blank or block.settings.button_1 != blank or block.settings.button_2 != blank %}
       <div class="cont-main-box">
         {% if block.settings.sub_title != blank %}
           <span class="label gloabLs">{{ block.settings.sub_title }}</span>
         {% endif %}
      
         {% if block.settings.title != blank or block.settings.description != blank or block.settings.button_1 != blank or block.settings.button_2 != blank %}
         <div class="cont-wrapper">
           {% if block.settings.title != blank %}
             <h3 class="item-title">{{ block.settings.title }}</h3>
           {% endif %}
           
           {% if block.settings.description != blank %}
           <div class="texts">
             <p>{{ block.settings.description }}</p>
           </div>
           {% endif %}
           
           {% if block.settings.button_1 != blank or block.settings.button_2 != blank %}
           <div class="btn-wrapper">
             {% if block.settings.button_1 != blank %}<a href="{% if block.settings.button_1_link != blank %}{{ block.settings.button_1_link }}{% else %}#{% endif %}" class="link global-link">{{ block.settings.button_1 }} {% render 'icon-right-arrow-2' %}</a>{% endif %}
             {% if block.settings.button_2 != blank %}<a href="{% if block.settings.button_2_link != blank %}{{ block.settings.button_2_link }}{% else %}#{% endif %}" class="link global-link">{{ block.settings.button_2 }} {% render 'icon-right-arrow-2' %}</a>{% endif %}
           </div>
           {% endif %}
         </div>
         {% endif %}
       </div>  
      {% endif %}
      
       {% if block.settings.background_image != blank %}
         <div class="item-media">
           {{ block.settings.background_image | image_url: width: 500 | image_tag: loading: 'lazy' }}
         </div>
       {% endif %}
    </div>
    {% endif %}
  {% endfor %}
</div>
{% endif %}

 


{% schema %}
{
  "name": "About Service",
  "tag": "section",
  "class": "section about-service-wrapper",
  "settings": [],
  "blocks": [
    {
      "type": "feature_block",
      "name": "Feature Block",
      "limit": 3,
      "settings": [
        {
          "type": "text",
          "label": "Sub Title",
          "id": "sub_title"
        },
        {
          "type": "text",
          "label": "Title",
          "id": "title"
        },
        {
          "type": "textarea",
          "label": "Description",
          "id": "description"
        },
        {
          "type": "text",
          "label": "Button 1",
          "id": "button_1"
        },
        {
          "type": "url",
          "label": "Button 1 Link",
          "id": "button_1_link"
        },
        {
          "type": "text",
          "label": "Button 2",
          "id": "button_2"
        },
        {
          "type": "url",
          "label": "Button 2 Link",
          "id": "button_2_link"
        },
        {
          "type": "image_picker",
          "label": "Background Image",
          "id": "background_image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "About Services"
    }
  ],
}
{% endschema %}