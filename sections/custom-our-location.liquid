{% schema %}
{
  "name": "Our Location",
  "settings": [
    {
      "type": "header",
      "content": "Image content"
    },
    {
      "type": "image_picker",
      "label": "Desktop Image",
      "id": "desktop_image"
    },
    {
      "type": "image_picker",
      "label": "Mobile Image",
      "id": "mobile_image"
    },
    {
        "type": "range",
        "id": "overlay_opacity",
        "label": "Image ovrlay opacity",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "%",
        "default": 20
    },
    {
      "type": "header",
      "content": "Presale Live Heading"
    },
    {
      "type": "inline_richtext",
      "label": "Sale Title",
      "id": "sale_title"
    },
    {
      "type": "textarea",
      "label": "Sale Content",
      "id": "sale_content"
    },
    {
      "type": "header",
      "content": "Banner Content"
    },
    {
      "type": "checkbox",
      "id": "show_btn",
      "label": "Show button"
    },
    {
      "type": "text",
      "id": "btn_text",
      "label": "Button Text"
    },
    {
      "type": "url",
      "id": "btn_url",
      "label": "Button URL"
    }
    
  ],
  "presets": [
    {
      "name": "Custom our location"
    }
  ]
}
{% endschema %}