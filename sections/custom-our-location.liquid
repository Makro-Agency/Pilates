
{{ 'custom-location.css' | asset_url | stylesheet_tag }}

<div class="custom-location{% if settings.animations_reveal_on_scroll %} scroll-trigger--offscreen scroll-trigger animate--fade-in{% endif %}"
  {% if settings.animations_reveal_on_scroll %}data-cascade style="--animation-order: {{ section.index }};"{% endif %}
>
  <div class="wrapper">
    <div class="wrapper-inner{% if settings.animations_reveal_on_scroll %} scroll-trigger--offscreen scroll-trigger animate--slide-in{% endif %}" {% if settings.animations_reveal_on_scroll %}data-cascade style="--animation-order: 0;"{% endif %}>
      <h2>{{ section.settings.heading }}</h2>
      <p class="description">{{ section.settings.description }}</p>
    </div>
    <div class="cards">
      {% for block in section.blocks %}
        <div class="card">
          <div class="info">
            {% if block.settings.title != blank %} <h3>{{ block.settings.title }}</h3>{% endif %}
            {% if block.settings.text != blank %}<p>{{ block.settings.text }}</p>{% endif %}
            {% if block.settings.link_text != blank %} 
            <a href="{{ block.settings.link }}" class="learn-more"> {{ block.settings.link_text }}  <span>{% render 'custom-arrow-right' %}</span> </a>
            {% endif %}
          </div>
          {%if block.settings.services_heading != blank %}
          <div class="services">
            <h4>{{ block.settings.services_heading }}</h4>
            <ul>
              {% if block.settings.service_1 != blank %}<li><span>{% render 'custom-correct' %}</span>{{ block.settings.service_1 }}</li>{% endif %}
              {% if block.settings.service_2 != blank %}<li><span>{% render 'custom-correct' %}</span>{{ block.settings.service_2 }}</li>{% endif %}
              {% if block.settings.service_3 != blank %}<li><span>{% render 'custom-correct' %}</span>{{ block.settings.service_3 }}</li>{% endif %}
              {% if block.settings.service_4 != blank %}<li><span>{% render 'custom-correct' %}</span>{{ block.settings.service_4 }}</li>{% endif %}
              {% if block.settings.service_5 != blank %}<li><span>{% render 'custom-correct' %}</span>{{ block.settings.service_5 }}</li>{% endif %}
              {% if block.settings.service_6 != blank %}<li><span>{% render 'custom-correct' %}</span>{{ block.settings.service_6 }}</li>{% endif %}
              {% if block.settings.service_7 != blank %}<li><span>{% render 'custom-correct' %}</span>{{ block.settings.service_7 }}</li>{% endif %}
              {% if block.settings.service_8 != blank %}<li><span>{% render 'custom-correct' %}</span>{{ block.settings.service_8 }}</li>{% endif %}
            </ul>
            {% if block.settings.link_text != blank %}
            <a href="{{ block.settings.link }}" class="learn-more-mobile">
               {{ block.settings.link_text }} 
              <span>{% render 'custom-arrow-right' %}</span>
            </a>
            {% endif %}
          </div>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</div>


