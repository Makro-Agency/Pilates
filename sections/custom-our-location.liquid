
{{ 'custom-location.css' | asset_url | stylesheet_tag }}

<div class="custom-location{% if settings.animations_reveal_on_scroll %} scroll-trigger--offscreen scroll-trigger animate--fade-in{% endif %}"
  {% if settings.animations_reveal_on_scroll %}data-cascade style="--animation-order: {{ section.index }};"{% endif %}
>
  <div class="wrapper">
    <div class="wrapper-inner{% if settings.animations_reveal_on_scroll %} scroll-trigger--offscreen scroll-trigger animate--slide-in{% endif %}"
      {% if settings.animations_reveal_on_scroll %}data-cascade style="--animation-order: 0;"{% endif %}
    >
      <h2>{{ section.settings.heading }}</h2>
      <p class="description">{{ section.settings.description }}</p>
    </div>
    <div class="cards">
      {% for block in section.blocks %}
        <div class="card">
          <div class="info">
            <h3>{{ block.settings.title }}</h3>
            <p>{{ block.settings.text }}</p>
            <a href="{{ block.settings.link }}" class="learn-more">
              {{ block.settings.link_text }}
              <span>{% render 'custom-arrow-right' %}</span>
            </a>
          </div>
          <div class="services">
            <h4>{{ block.settings.services_heading }}</h4>
            <ul>
              <li><span>{% render 'custom-correct' %}</span>{{ block.settings.service_1 }}</li>
              <li><span>{% render 'custom-correct' %}</span>{{ block.settings.service_2 }}</li>
              <li><span>{% render 'custom-correct' %}</span>{{ block.settings.service_3 }}</li>
            </ul>
            <a href="{{ block.settings.link }}" class="learn-more-mobile">
              {{ block.settings.link_text }}
              <span>{% render 'custom-arrow-right' %}</span>
            </a>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>


{% schema %}
{
  "name": "Custom Locations",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section heading",
      "default": "OUR LOCATIONS"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Section description",
      "default": "Porem ipsum dolor sit amet, consectetur adipiscing elit. Nunc vulputate libero et velit interdum, ac aliquet odio mattis."
    }
  ],
  "blocks": [
    {
      "type": "location",
      "name": "Location card",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Card title",
          "default": "THE WELL"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Card text",
          "default": "Porem ipsum dolor sit amet, consectetur adipiscing elit. Nunc vulputate libero et velit interdum, ac aliquet odio mattis."
        },
        {
          "type": "url",
          "id": "link",
          "label": "Learn more URL",
          "default": "/"
        },
        {
          "type": "text",
          "id": "link_text",
          "label": "Learn more text",
          "default": "Learn more"
        },
        {
          "type": "text",
          "id": "services_heading",
          "label": "Services heading",
          "default": "Exclusive Services:"
        },
        {
          "type": "text",
          "id": "service_1",
          "label": "Service 1",
          "default": "Service A"
        },
        {
          "type": "text",
          "id": "service_2",
          "label": "Service 2",
          "default": "Service B"
        },
        {
          "type": "text",
          "id": "service_3",
          "label": "Service 3",
          "default": "Service C"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Locations",
      "category": "Sections",
      "blocks": [
        { "type": "location" },
        { "type": "location" }
      ]
    }
  ]
}
{% endschema %}